<Page x:Class="MagazineNegrov.PAGES.REGPAGE"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MagazineNegrov.PAGES"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="REGPAGE">

    <Page.Resources>
        <Style x:Key="TexTitleFStyle" >
            <Setter Property="Control.FontFamily" Value="Verdana"/>
            <Setter Property="Control.Foreground" Value="White"/>
            <Setter Property="Control.FontSize" Value="30"/>
            <Setter Property="Control.Background" Value="#3B3D4A"/>
            <Setter Property="Control.BorderBrush" Value="White"/>
            <Setter Property="Control.BorderThickness" Value="1,1,1,1"/>
        </Style>
        <Style  TargetType="Button">
            <Setter Property="Control.FontFamily" Value="Verdana"/>
            <Setter Property="Control.Foreground" Value="White"/>
            <Setter Property="Control.FontSize" Value="20"/>
            <Setter Property="Control.Background" Value="MediumPurple"/>


        </Style>

        <Style x:Key="TEXTKPKNADBOXOM">
            <Setter Property="Control.FontFamily" Value="Verdana"/>
            <Setter Property="Control.Foreground" Value="Gray"/>
            <Setter Property="Control.FontSize" Value="25"/>
            <Setter Property="Control.Background" Value="#131416"/>


        </Style>


    </Page.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="140*"/>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="22*"/>
            <ColumnDefinition Width="9*"/>
        </Grid.ColumnDefinitions>



        <DataGrid x:Name="UsersList" Grid.Column="1" Loaded="UsersList_Loaded"   AutoGenerateColumns="True" IsReadOnly="True">


        </DataGrid>






        <TextBox Name="LoginTextBox" Text="Логин" Grid.Column="1" Grid.Row="1" />
        <TextBox Name="PasswordTextBox" Text="Пароль" Grid.Column="1" Grid.Row="2" />
        <TextBox  Name="Password2TextBox" Text="Повторите пароль" Grid.Column="1" Grid.Row="3" />
        <TextBox  Name="EmailTextBox" Text="Email" Grid.Column="1" Grid.Row="4" />
        <Button Name="RegTextBox" Content="Зарегистрироваться" Grid.Column="1" Grid.Row="5" Click="RegTextBox_Click" Command="{Binding AddUser}" />
        <Button Content="Войти" Grid.Column="1" Grid.Row="6" Margin="150,40,150,20" Click="Button_Click" />
        <Frame x:Name="xzlol" Grid.Row="0" Grid.ColumnSpan="10" Grid.RowSpan="10" Navigated="xzlol_Navigated" />
    </Grid>
    </Page>